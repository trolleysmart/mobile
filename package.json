{
  "name": "TrolleySmart",
  "description": "Trolley Smart",
  "version": "1.2.2",
  "author": {
    "name": "Micro Business Ltd",
    "email": "micro.business.ltd@gmail.com",
    "url": "http://www.micro-business.co.nz"
  },
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow",
    "relay": "relay-compiler --src ./src --schema data/schema.graphql",
    "relay:watch": "yarn relay -- --watch",
    "android:apk": "cd android && ./gradlew assembleRelease",
    "android:install": "adb install android/app/build/outputs/apk/app-release.apk",
    "clear": "node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "devtools": "react-devtools",
    "precommit": "lint-staged",
    "codepush:ios": "code-push release-react trolleysmart-alpha-ios ios && code-push promote trolleysmart-alpha-ios Staging Production",
    "codepush:android": "code-push release-react trolleysmart-alpha-android android && code-push promote trolleysmart-alpha-android Staging Production"
  },
  "dependencies": {
    "@microbusiness/common-react": "^1.1.3",
    "@microbusiness/common-react-native": "^1.1.19",
    "@microbusiness/parse-server-common-react-native": "^1.1.13",
    "email-validator": "1.1.1",
    "immutable": "^4.0.0-rc.9",
    "lodash.debounce": "^4.0.8",
    "monet": "^0.8.10",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-immutable-proptypes": "2.1.0",
    "react-native": "0.51.0",
    "react-native-action-button": "^2.8.3",
    "react-native-code-push": "^5.2.1",
    "react-native-config": "^0.11.2",
    "react-native-easy-grid": "0.1.15",
    "react-native-easy-toast": "^1.0.9",
    "react-native-elements": "0.18.5",
    "react-native-exception-handler": "^2.6.2",
    "react-native-fast-image": "^2.0.1",
    "react-native-fbsdk": "^0.6.3",
    "react-native-image-pan-zoom": "^2.0.16",
    "react-native-maps": "^0.19.0",
    "react-native-popup-dialog": "^0.10.44",
    "react-native-popup-menu": "^0.12.1",
    "react-native-restart": "0.0.6",
    "react-native-swiper": "^1.5.13",
    "react-native-vector-icons": "4.4.3",
    "react-navigation": "1.0.0-beta.22",
    "react-redux": "5.0.6",
    "react-relay": "1.4.1",
    "redux": "3.7.2",
    "redux-saga": "0.16.0",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "babel-eslint": "8.1.0",
    "babel-jest": "22.0.4",
    "babel-plugin-relay": "1.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-native": "4.0.0",
    "babel-preset-react-native-stage-0": "1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "4.14.0",
    "eslint-plugin-flowtype": "2.40.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-react": "7.5.1",
    "eslint-plugin-react-native": "3.2.0",
    "flow-bin": "0.61.0",
    "husky": "^0.14.3",
    "jest": "22.0.4",
    "lint-staged": "^6.0.0",
    "plist": "^2.1.0",
    "prettier": "1.9.2",
    "react-devtools": "3.0.0",
    "react-test-renderer": "16.2.0",
    "redux-devtools": "3.4.1",
    "relay-compiler": "1.4.1",
    "xcode": "^1.0.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": "lint:staged",
  "repository": {
    "url": "git@bitbucket.org:microbusiness/trolley-smart-mobile.git",
    "type": "git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  }
}
